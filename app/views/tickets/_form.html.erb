<%= form_with model: @ticket, local: true do |form| %>

  <%= render 'common/errors', resource: @ticket %>

  <p>
    <%= form.label :number %><br>
    <%= form.number_field :number, id: :ticket_number %>
  </p>
  <p>
    <%= form.label :user_id %><br>
    <%= form.select :user_id, User.all.map { |user| [user.title, user.id] } %>
  </p>
  <p>
    <%= form.label :wagon_id %><br>
    <%= form.select :wagon_id, @train.wagons.all.map { |wagon| [wagon.number, wagon.id] } %>
  </p>
  <p>
    <%= form.label :train_id %><br>
    <%= form.select :train_id, Train.all.map { |train| [train.number, train.id] } %>
  </p>
  <p>
    <%= form.label :railway_station_id %><br>
    <%= form.select :railway_station_id, @train.route.railway_stations.map { |railway_station| [railway_station.title, railway_station.id] } %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
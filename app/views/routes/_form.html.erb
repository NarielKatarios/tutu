<%= form_with model: @route, local: true do |form| %>

  <% if @route.errors.any? %>
    <div id="error_explanation">
      <h2>
        <%= pluralize(@route.errors.count, "error") %> prohibited
        this route from being saved:
      </h2>
      <ul>
        <% @route.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title, id: :route_title %>
  </p>

  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>

  <p>
    <%= form.submit %>
  </p>

<% end %>
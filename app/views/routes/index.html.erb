<h1>Listing routes</h1>
<%= link_to 'На главную', root_path %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th colspan="3"></th>
  </tr>

  <% @routes.each do |route| %>
    <tr>
      <td><%= route.title %></td>
      <td><%= route.text %></td>
      <td><%= link_to 'Show', route_path(route) %></td>
      <td><%= link_to 'Edit', edit_route_path(route) %></td>
      <td><%= link_to 'Destroy', route_path(route),
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Новый маршрут', new_route_path %>

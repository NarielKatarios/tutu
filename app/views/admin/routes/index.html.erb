<h1>Маршруты</h1>
<%= link_to 'На главную', root_path %>

<table class="table table-striped">
  <tr>
    <th>Наименование</th>
    <th>Дополнительные сведения</th>
    <th colspan="3"></th>
  </tr>

  <% @routes.each do |route| %>
    <tr>
      <td><%= link_to route_full_name(route), admin_route_path(route) %></td>
      <td><%= route.text %></td>
      <td><%= link_to 'Изменить', edit_admin_route_path(route) %></td>
      <td><%= link_to 'Удалить', admin_route_path(route),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Новый маршрут', new_admin_route_path %>

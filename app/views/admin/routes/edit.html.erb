<h1>Изменение маршрута</h1>

<%= render 'form' %>

<p>
  <strong>Содержит станции:</strong>
  <%- @route.railway_stations.each do |st| %>
    <p>
      <%  %>
      <%= link_to 'Удалить станцию', admin_route_del_station_path(@route, railway_station: st), method: :post %>
      <%= st.title %>
  <%- end %>
</p>
<p>
  <strong>Добавить станции:</strong>
  <%- @railway_stations.each do |st| %>
    <p>
      <%= link_to 'Добавить станцию', admin_route_add_station_path(@route, railway_station: st), method: :post %>
      <%= st.title %>
  <%- end %>
</p>-


<%= link_to 'Назад', admin_routes_path %>
<h1>Пользователи</h1>
<%= link_to 'На главную', root_path %>

<table class="table table-striped">
  <tr>
    <th>Фамилия</th>
    <th>Имя</th>
    <th>email</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= user.last_name %></td>
      <td><%= user.first_name %></td>
      <td><%= link_to (user.email.present? ? user.email : '---------'), admin_user_path(user) %></td>
      <td><%= link_to 'Изменить', edit_admin_user_path(user) %></td>
      <td><%= link_to 'Удалить', admin_user_path(user),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>
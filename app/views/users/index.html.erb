<h1>Пользователи</h1>
<%= link_to 'На главную', root_path %>

<table>
  <tr>
    <th>Наименование</th>
    <th colspan="3"></th>
  </tr>

  <% @users.each do |user| %>
    <tr>
      <td><%= link_to user.title, user_path(user) %></td>
      <td><%= link_to 'Изменить', edit_user_path(user) %></td>
      <td><%= link_to 'Удалить', user_path(user),
              method: :delete,
              data: { confirm: 'Вы уверены?' } %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Новый пользователь', new_user_path %>

<!DOCTYPE html>
<html>
<head>
  <title>Tutu - Администратор</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<div class="navbar navbar-default navbar-static-top">
  <div class="container">
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to 'Tutu', root_path, class: 'navbar-brand' %>
    <div class="navbar-collapse collapse navbar-responsive-collapse">
      <ul class="nav navbar-nav">
        <% if user_signed_in? %>
          <li><%= link_to 'Выйти', destroy_user_session_path, method: :delete  %></li>
          <li><%= link_to 'Список станций', admin_railway_stations_path %></li>
          <li><%= link_to 'Список поездов', admin_trains_path %></li>
          <li><%= link_to 'Список маршрутов', admin_routes_path %></li>
          <li><%= link_to 'Список билетов', tickets_path %></li>
          <li><%= link_to 'Список пользователей', admin_users_path %></li>
          <li><%= link_to 'Список вагонов', admin_wagons_path %></li>
          <li><%= link_to 'Поиск билетов', search_index_path %></li>
        <% else %>
          <li><%= link_to 'Войти', new_user_session_path %></li>
        <% end %>
      </ul>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <%= bootstrap_flash %>
      <%= yield %>
    </div>
  </div><!--/row-->

  <footer>
    <p>&copy; Company 2018</p>
  </footer>

</div> <!-- /container -->

</body>
</html>

<%= render 'layouts/footer' %>
</body>
</html>
